@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "E‑posta Gönderildi";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="auth-wrap">
    <div class="card-auth bg-white" style="max-width: 540px;">
        <div class="p-4 p-md-5 text-center">
            <h1 class="h-title h3 mb-2">E‑posta Gönderildi</h1>
            <p class="h-sub">
                Şifre sıfırlama bağlantısı e‑posta adresinize gönderildi. Gelen kutunuzu ve gerekirse
                <strong>spam</strong> klasörünü kontrol edin.
            </p>

            <div class="mt-4 d-flex gap-2 justify-content-center">
                <a class="btn-gradient px-4" asp-area="Identity" asp-page="/Account/Login">Girişe Dön</a>
                <a class="link-soft align-self-center" asp-controller="Home" asp-action="Index">Ana sayfa</a>
            </div>
        </div>
    </div>
</div>

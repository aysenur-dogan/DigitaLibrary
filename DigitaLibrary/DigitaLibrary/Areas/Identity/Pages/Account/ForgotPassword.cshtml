@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="auth-wrap">
    <div class="card-auth bg-white" style="max-width: 540px;">
        <div class="p-4 p-md-5">

            <div class="mb-4 text-center">
                <h1 class="h-title h3 mb-1">Şifremi Unuttum</h1>
                <div class="h-sub small">E‑posta adresinize sıfırlama bağlantısı gönderelim</div>
            </div>

            <form method="post" asp-antiforgery="true" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">E‑posta</label>
                    <div class="input-icon">
                        <i class="bi bi-envelope"></i>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="ornek@site.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn-gradient w-100 mb-3">
                    Sıfırlama Bağlantısı Gönder
                </button>

                <hr class="hr-soft my-3" />

                <div class="d-flex flex-column flex-sm-row justify-content-between gap-2">
                    <a class="link-soft" asp-page="./Login">Giriş sayfasına dön</a>
                    <a class="link-soft" asp-page="./Register">Hesabınız yok mu? Kayıt olun</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

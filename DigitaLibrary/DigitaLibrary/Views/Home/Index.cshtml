@model IEnumerable<DigitaLibrary.Models.AcademicWork>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container py-4">

    <h2 class="mb-3">Kategoriler</h2>
    <div class="mb-4">
        @foreach (var cat in (IEnumerable<DigitaLibrary.Models.Category>)ViewBag.Categories)
        {
            <a asp-action="Index" asp-route-categoryId="@cat.Id"
               class="btn btn-sm btn-outline-primary me-2 mb-2">
                @cat.Name
            </a>
        }
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="q" value="@Context.Request.Query["q"]"
                   placeholder="Başlık, yazar, anahtar kelime..." class="form-control" />
            <button type="submit" class="btn btn-primary">Ara</button>
        </div>
    </form>

    <h2 class="mb-3">Son Çalışmalar</h2>
    @if (!Model.Any())
    {
        <div class="alert alert-info">Hiç çalışma bulunamadı.</div>
    }
    else
    {
        @foreach (var w in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5>@w.Title</h5>

                    @if (!string.IsNullOrWhiteSpace(w.Abstract))
                    {
                        <p class="text-muted">@w.Abstract</p>
                    }

                    <div class="mb-2">
                        <span class="badge bg-secondary">@w.Category?.Name</span>
                        <span class="ms-2">
                            <!-- 👇 Yazar profiline link -->
                            <a asp-controller="Profile"
                               asp-action="ViewProfile"
                               asp-route-id="@w.AuthorId">
                                @w.Author?.DisplayName
                            </a>
                        </span>
                        <span class="text-muted ms-2">
                            @w.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy")
                        </span>
                    </div>

                    <a asp-controller="AcademicWorks"
                       asp-action="Details"
                       asp-route-slug="@w.Slug"
                       class="btn btn-sm btn-outline-info">Detay</a>
                </div>
            </div>
        }
    }
</div>

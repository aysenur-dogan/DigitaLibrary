@{
    ViewData["Title"] = "Ana Sayfa";
}

@section Styles {
    <style>
        /* sayfa arka planı – yumuşak degrade */
        .page-bg {
            background: radial-gradient(1200px 600px at 20% -10%, #eef2ff 0%, transparent 60%), radial-gradient(1200px 700px at 90% 110%, #d1fae5 0%, transparent 60%), #f7f9fc;
            min-height: calc(100vh - 120px);
        }

        /* başlık */
        .hero-title {
            font-weight: 700;
            font-size: clamp(28px, 4.2vw, 48px);
            letter-spacing: .2px;
        }

        .hero-sub {
            color: #6b7280;
        }

        /* kartlar */
        .soft-card {
            background: #fff;
            border: 1px solid #eaeaea;
            border-radius: 16px;
            box-shadow: 0 12px 30px -22px rgba(0,0,0,.3);
        }

        /* gradient buton */
        .btn-gradient {
            border-radius: 999px;
            border: 0;
            background: linear-gradient(90deg,#5b8cff,#6a11cb);
            color: #fff;
            padding: .6rem 1.15rem;
            font-weight: 600;
        }

            .btn-gradient:hover {
                filter: brightness(1.05);
            }
    </style>
}

<div class="page-bg py-4 py-md-5">
    <div class="container">

        <!-- Başlık -->
        <div class="text-center mb-3 mb-md-4">
            <h1 class="hero-title">Hoş Geldin! 👋</h1>
            <p class="hero-sub">Dijital kütüphanende aradığını bul, kategorileri keşfet.</p>
        </div>

        <!-- Bülten -->
        <div class="soft-card p-3 mt-3">
            <div class="row g-2 align-items-center">
                <div class="col-md-3">
                    <div class="fw-semibold">Bültene katıl</div>
                    <div class="text-muted small">Yeni içerikleri kaçırma.</div>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-envelope"></i></span>
                        <input class="form-control" placeholder="ornek@site.com" />
                    </div>
                </div>
                <div class="col-md-3 text-md-end">
                    <button class="btn btn-gradient w-100 w-md-auto">Abone Ol</button>
                </div>
            </div>
        </div>

        <!-- Alt boşluk -->
        <div class="py-4"></div>
    </div>
</div>

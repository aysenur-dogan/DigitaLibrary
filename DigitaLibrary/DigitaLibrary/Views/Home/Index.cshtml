@* @model DigitaLibrary.ViewModels.HomeIndexViewModel *@
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!-- FULL-WIDTH ÜST BAR -->
<header class="border-bottom bg-white position-sticky top-0 z-3">
    <nav class="navbar navbar-expand-lg container-fluid px-3 px-md-4 py-2">
        <a class="navbar-brand fw-bold me-3" asp-controller="Home" asp-action="Index">
            <span class="text-primary">DIGIL</span><span class="text-dark">ibrary</span><span class="ms-1">📝</span>
        </a>

        <!-- Orta: Arama -->
        <form class="search flex-grow-1 mx-2 mx-md-3 d-none d-lg-flex" method="get" asp-controller="Posts" asp-action="Index">
            <div class="search-pill w-100">
                <i class="bi bi-search ms-3 me-2"></i>
                <input name="q" type="search" class="flex-grow-1 form-control-plaintext" placeholder="Ara: başlık, etiket, yazar…">
                <button class="btn btn-grad ms-2 me-2 px-4" type="submit">Ara</button>
            </div>
        </form>

        <!-- Sağ: ikonlar -->
        <div class="d-flex align-items-center gap-2 ms-auto">
            <a class="btn btn-icon" asp-controller="Posts" asp-action="Index" title="Tüm Yazılar"><i class="bi bi-grid-3x3-gap"></i></a>
            <a class="btn btn-icon" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profil"><i class="bi bi-person"></i></a>
            <a class="btn btn-icon" asp-controller="Favorites" asp-action="Index" title="Beğenilerim"><i class="bi bi-heart"></i></a>
            <a class="btn btn-icon" asp-controller="Bookmarks" asp-action="Index" title="Okuma Listem"><i class="bi bi-bookmark"></i></a>
            <a class="btn btn-sm btn-primary d-none d-lg-inline" asp-area="Identity" asp-page="/Account/Login">Giriş</a>

            <button class="btn btn-icon d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#mobileSearch">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </nav>

    <!-- Mobil arama -->
    <div id="mobileSearch" class="collapse border-top">
        <div class="container-fluid px-3 px-md-4 py-2">
            <form method="get" asp-controller="Posts" asp-action="Index">
                <div class="search-pill">
                    <i class="bi bi-search ms-3 me-2"></i>
                    <input name="q" type="search" class="flex-grow-1 form-control-plaintext" placeholder="Ara…">
                    <button class="btn btn-grad ms-2 me-2 px-4" type="submit">Ara</button>
                </div>
            </form>
        </div>
    </div>
</header>

<!-- HERO (butonlar kaldırıldı) -->
<section class="hero">
    <div class="container-fluid px-3 px-md-4">
        <div class="py-4 py-md-5 text-center">
            <h1 class="fw-bold display-6 mb-1">Hoş Geldin! <span class="wave">👋</span></h1>
            <p class="text-muted m-0">Dijital kütüphanende aradığını bul, kategorileri keşfet.</p>
        </div>
    </div>
</section>

<!-- ANA İSKELET: SOL MENÜ + SAĞ KARTLAR -->
<main class="py-3 py-md-4">
    <div class="container-fluid px-3 px-md-4">
        <div class="row g-4">
            <!-- Sol Dikey Menü -->
            <aside class="col-12 col-lg-3">
                <div class="card shadow-sm border-0 sidemenu">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-2 mb-3">
                            <i class="bi bi-list fs-5"></i><span class="fw-semibold">Tüm Kategoriler</span>
                        </div>

                        @if (Model?.Categories != null && Model.Categories.Any())
                        {
                            <ul class="list-unstyled m-0">
                                @foreach (var c in Model.Categories.Take(12))
                                {
                                    <li class="mb-1">
                                        <a class="sidemenu-link" asp-controller="Categories" asp-action="Details" asp-route-slug="@c.Slug">
                                            @c.Name
                                            <span class="badge bg-light text-secondary ms-2">@c.PostCount</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                            <div class="mt-2">
                                <a class="link-primary small" asp-controller="Categories" asp-action="Index">Tümünü gör</a>
                            </div>
                        }
                        else
                        {
                            <div class="text-muted small">Henüz kategori yok.</div>
                        }
                    </div>
                </div>
            </aside>

            <!-- Sağ İçerik -->
            <section class="col-12 col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h2 class="h5 m-0">Son Yazılar</h2>
                    <a class="link-primary small" asp-controller="Posts" asp-action="Index">Hepsini gör</a>
                </div>

                <div class="row g-3 g-md-4">
                    @if (Model?.RecentPosts != null && Model.RecentPosts.Any())
                    {
                        foreach (var p in Model.RecentPosts)
                        {
                            <div class="col-12 col-sm-6 col-xl-4">
                                <a class="card h-100 shadow-sm border-0 post-card text-decoration-none"
                                   asp-controller="Posts" asp-action="Details" asp-route-slug="@p.Slug">
                                    <div class="ratio ratio-4x3 rounded-top overflow-hidden">
                                        <img src="@(p.ThumbnailUrl ?? "/images/placeholder.jpg")" class="img-cover" alt="@p.Title" />
                                    </div>
                                    <div class="card-body">
                                        <div class="small text-muted">@p.CategoryName • @p.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy")</div>
                                        <h3 class="h6 mt-1 mb-1 text-dark">@p.Title</h3>
                                        <p class="text-muted small m-0 line-clamp-2">@p.Excerpt</p>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="alert alert-light border rounded-3">Henüz içerik yok.</div>
                        </div>
                    }
                </div>

                <!-- Bülten -->
                <div class="newsletter card border-0 shadow-sm mt-4">
                    <div class="card-body p-3 p-md-4 d-flex flex-column flex-md-row align-items-center gap-3">
                        <div class="flex-fill">
                            <h3 class="h6 mb-1">Bültene katıl</h3>
                            <div class="text-muted small">Yeni içerikleri kaçırma.</div>
                        </div>
                        <form class="d-flex gap-2 w-100 w-md-auto" method="post" asp-controller="Newsletter" asp-action="Subscribe">
                            <input name="email" type="email" class="form-control bg-input border-0 rounded-pill px-3" placeholder="ornek@site.com" required />
                            <button class="btn btn-grad rounded-pill px-4">Abone Ol</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>

<footer class="py-4 text-center text-muted small">© @DateTime.Now.Year — DigitaLibrary</footer>

<!-- Sayfaya özel stil -->
<style>
    /* Genel arka plan – yumuşak gradyan */
    body {
        background: radial-gradient(1200px 500px at -5% -10%, rgba(111,132,255,.18), transparent 60%), radial-gradient(800px 400px at 110% 20%, rgba(0,220,255,.15), transparent 60%), radial-gradient(600px 300px at 40% 120%, rgba(0,0,0,.05), transparent 70%), #f4f6ff !important;
    }

    /* Üst ikon butonları */
    .btn-icon {
        border: 1px solid #e7eaf7;
        background: #fff;
        border-radius: 14px;
        padding: .45rem .6rem
    }

        .btn-icon:hover {
            background: #f3f5ff
        }

    /* Hero alanı (butonsuz) */
    .hero {
        padding-top: .5rem
    }

    /* Arama kapsülü */
    .search-pill {
        display: flex;
        align-items: center;
        width: 100%;
        background: #eaf0ff;
        border-radius: 999px;
        padding: .35rem;
        box-shadow: 0 8px 24px rgba(79,70,229,.08);
    }

    .search .search-pill {
        max-width: 900px;
    }
    /* üst bardaki */
    .search-pill input {
        padding: .85rem 1rem
    }

    /* Gradient buton */
    .btn-grad {
        color: #fff;
        border: 0;
        border-radius: 999px;
        background-image: linear-gradient(90deg,#4f46e5,#00bcd4);
        box-shadow: 0 12px 26px rgba(79,70,229,.22);
        transition: transform .08s ease, box-shadow .2s ease, filter .2s ease;
    }

        .btn-grad:hover {
            filter: brightness(1.03);
            box-shadow: 0 16px 30px rgba(79,70,229,.26)
        }

        .btn-grad:active {
            transform: translateY(1px)
        }

    /* Sol menü */
    .sidemenu {
        border-radius: 16px
    }

    .sidemenu-link {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: .55rem .65rem;
        border-radius: .6rem;
        color: var(--bs-body-color);
        text-decoration: none
    }

        .sidemenu-link:hover {
            background: #f2f5ff
        }

    /* Kart görselleri */
    .img-cover {
        width: 100%;
        height: 100%;
        object-fit: cover
    }

    .ratio-4x3 {
        --bs-aspect-ratio: 75%
    }

    .post-card .card-body {
        padding: .85rem 1rem
    }

    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden
    }

    /* Newsletter */
    .bg-input {
        background: #eef3ff
    }

    .newsletter {
        border-radius: 16px
    }

    /* Küçük el sallama animasyonu */
    .wave {
        display: inline-block;
        transform-origin: 70% 70%;
        animation: wave 2s infinite
    }

    @@keyframes wave {
        0% {
            transform: rotate(0)
        }

        15% {
            transform: rotate(14deg)
        }

        30% {
            transform: rotate(-8deg)
        }

        40% {
            transform: rotate(14deg)
        }

        50% {
            transform: rotate(-4deg)
        }

        60% {
            transform: rotate(10deg)
        }

        100% {
            transform: rotate(0)
        }
    }
</style>

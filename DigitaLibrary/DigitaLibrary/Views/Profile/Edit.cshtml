@model DigitaLibrary.ViewModels.ProfileEditViewModel
@{
    ViewData["Title"] = "Kullanıcı Bilgileri";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Kullanıcı Bilgileri</h4>
        <a asp-action="Me" class="text-decoration-none">
            <i class="bi bi-person"></i> Profili Gör
        </a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger mb-2" })

        <div class="row g-4">

            <!-- Sol kolon -->
            <div class="col-lg-6">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Biyografi</label>
                    <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Kullanıcı biyografisi girilmemiştir."></textarea>
                    <span asp-validation-for="Bio" class="text-danger small"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="EducationInfo" class="form-label fw-semibold"></label>
                        <input asp-for="EducationInfo" class="form-control" placeholder="Lisans: ..., YL: ..." />
                        <span asp-validation-for="EducationInfo" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Interests" class="form-label fw-semibold"></label>
                        <input asp-for="Interests" class="form-control" placeholder="Yazılım, Yapay Zekâ, Veri Bilimi" />
                        <span asp-validation-for="Interests" class="text-danger small"></span>
                    </div>
                </div>

            </div>
            <!-- Sağ kolon -->
            <div class="col-lg-6">
                <div class="mb-3 fw-semibold">Hesap Bilgileri</div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">İsim</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Soyisim</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text">@@</span>
                            <input asp-for="UserName" class="form-control" />
                        </div>
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-12">
                        <label asp-for="Email" class="form-label">Mail Adresi</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Parola</label>
                        <input type="password" class="form-control" value="........" disabled />
                        <div class="form-text">
                            Parolayı değiştirmek için
                            <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword">buraya tıklayın</a>.
                        </div>

                    </div>
                </div>

                <hr class="my-3" />

                <!-- Fotoğraf yükleme -->
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Profil Fotoğrafı</label>
                        <input asp-for="AvatarFile" type="file" class="form-control" accept="image/*" />
                        @if (!string.IsNullOrWhiteSpace(Model.AvatarPath))
                        {
                            <img src="@Model.AvatarPath" class="mt-2 rounded-circle"
                                 style="width:64px;height:64px;object-fit:cover;" />
                        }
                        <span asp-validation-for="AvatarFile" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Kapak Görseli</label>
                        <input asp-for="CoverFile" type="file" class="form-control" accept="image/*" />
                        @if (!string.IsNullOrWhiteSpace(Model.CoverPath))
                        {
                            <img src="@Model.CoverPath" class="mt-2 rounded"
                                 style="width:100%;max-width:180px;height:48px;object-fit:cover;" />
                        }
                        <span asp-validation-for="CoverFile" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
            <a asp-action="Me" class="btn btn-outline-secondary">İptal</a>
        </div>
        <div class="mb-3">
            <label asp-for="EducationInfo" class="form-label"></label>
            <input asp-for="EducationInfo" class="form-control" />
            <span asp-validation-for="EducationInfo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Interests" class="form-label"></label>
            <input asp-for="Interests" class="form-control" placeholder="Yazılım, Yapay Zekâ, ..." />
            <span asp-validation-for="Interests" class="text-danger"></span>
        </div>
 
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

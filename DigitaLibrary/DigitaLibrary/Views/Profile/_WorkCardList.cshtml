@model IEnumerable<DigitaLibrary.Models.AcademicWork>

@if (Model == null || !Model.Any())
{
    <div class="text-muted">Henüz eklenmiş akademik çalışma yok.</div>
}
else
{
    <div class="row g-3">
        @foreach (var w in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                <div class="card h-100 shadow-sm">
                    <a asp-controller="AcademicWorks" asp-action="Details" asp-route-slug="@w.Slug" class="text-decoration-none">
                        <img class="card-img-top"
                             src="@(string.IsNullOrWhiteSpace(w.CoverImagePath) ? "/images/placeholders/cover-400x250.png" : w.CoverImagePath)"
                             alt="@w.Title" style="object-fit:cover; height:180px;">
                        <div class="card-body">
                            <h6 class="card-title text-dark">@w.Title</h6>
                            @if (!string.IsNullOrWhiteSpace(w.Authors))
                            {
                                <div class="text-muted small">@w.Authors</div>
                            }
                            <div class="text-muted small">@w.CreatedAt.ToShortDateString()</div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
}

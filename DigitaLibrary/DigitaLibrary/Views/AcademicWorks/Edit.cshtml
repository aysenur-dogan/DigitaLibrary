@model DigitaLibrary.ViewModels.AcademicWorkCreateVm
@{
    ViewData["Title"] = "Çalışmayı Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <!-- Özet -->
    <div class="mb-3 mt-2">
        <label asp-for="Abstract" class="form-label">Özet</label>
        <textarea asp-for="Abstract" class="form-control" rows="4"></textarea>
    </div>

    <!-- Kategori -->
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Kategori</label>
        <select asp-for="CategoryId"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name", Model.CategoryId))">
            <option value="">-- Kategori Seçin --</option>
        </select>
    </div>

    <!-- Anahtar Kelimeler -->
    <div class="mb-3">
        <label asp-for="Keywords" class="form-label">Anahtar Kelimeler</label>
        <input asp-for="Keywords" class="form-control" />
    </div>
    <!-- İçerik Türü -->
    <div class="mb-2">
        <label class="form-label d-block">İçerik Türü</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="ContentMode" value="FileOnly" id="m1">
            <label class="form-check-label" for="m1">Sadece Dosya</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="ContentMode" value="TextOnly" id="m2">
            <label class="form-check-label" for="m2">Sadece Metin</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="ContentMode" value="FileAndText" id="m3">
            <label class="form-check-label" for="m3">İkisi</label>
        </div>
    </div>

    <!-- Dosya -->
    <div id="file-area" class="mb-3">
        <label asp-for="File" class="form-label">PDF/DOCX</label>
        <input asp-for="File" type="file" class="form-control" />
    </div>

    <!-- HtmlContent -->
    <div id="text-area" class="mb-3">
        <label asp-for="HtmlContent" class="form-label">Metin İçerik</label>
        <textarea asp-for="HtmlContent" id="HtmlContent" class="form-control" rows="10"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
  

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.ckeditor.com/ckeditor5/41.0.0/classic/ckeditor.js"></script>
    <script>
        let editorInstance = null;

        function mountEditor() {
            if (editorInstance) return;
            ClassicEditor.create(document.getElementById('HtmlContent'))
                .then(ed => editorInstance = ed)
                .catch(console.error);
        }

        function destroyEditor() {
            if (!editorInstance) return;
            editorInstance.destroy().then(() => { editorInstance = null; });
        }

        function syncAreas() {
            const mode = document.querySelector('input[name="ContentMode"]:checked')?.value;
            document.getElementById('file-area').style.display = (mode === 'TextOnly') ? 'none' : '';
            document.getElementById('text-area').style.display = (mode === 'FileOnly') ? 'none' : '';
            if (mode === 'FileOnly') destroyEditor(); else mountEditor();
        }

        document.addEventListener('DOMContentLoaded', () => {
            syncAreas();
            document.querySelectorAll('input[name="ContentMode"]').forEach(r => r.addEventListener('change', syncAreas));
        });
    </script>
}

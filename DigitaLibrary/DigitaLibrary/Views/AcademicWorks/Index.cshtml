@model IEnumerable<DigitaLibrary.Models.AcademicWork>

<h2>Akademik Çalışmalar</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Tür</th>
            <th>Dil</th>
            <th>Yıl</th>
            <th>İşlemler</th> <!-- yeni sütun -->
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td><a asp-action="Details" asp-route-slug="@x.Slug">@x.Title</a></td>
                <td>@x.Authors</td>
                <td>@x.PublicationType</td>
                <td>@x.Language</td>
                <td>@x.Year</td>
                <td>
                    <a asp-action="Details" asp-route-slug="@x.Slug" class="btn btn-sm btn-outline-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Ekle</a>

@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MyApp</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/app.css" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <header class="main-navbar py-2">
        <div class="container">
            <div class="d-flex align-items-center gap-3 glass-nav px-3 py-2">

                <!-- Logo (Ana sayfaya linkli) -->
                <a asp-controller="Home" asp-action="Index" class="fw-bold me-2 text-decoration-none" style="font-size:18px;">
                    <span style="color:#2563eb;">DIGI</span><span style="color:#8b5cf6;">Library</span> 📝
                </a>

                <!-- Ana Sayfa -->
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                    Ana Sayfa
                </a>

                <!-- Kategoriler (Dropdown) -->
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="navbarCategories"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        Kategoriler
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="navbarCategories">
                        @foreach (var cat in (IEnumerable<DigitaLibrary.Models.Category>)ViewBag.Categories ?? new List<DigitaLibrary.Models.Category>())
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-route-categoryId="@cat.Id">
                                    @cat.Name
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Arama -->
                <form id="searchForm" asp-controller="Home" asp-action="Index" method="get"
                      class="flex-grow-1 position-relative ms-3">
                    <i class="bi bi-search search-icon"></i>
                    <input name="q" value="@Context.Request.Query["q"]"
                           class="form-control search-input"
                           placeholder="Ara: başlık, etiket, yazar..." />
                </form>
                <button type="submit" form="searchForm" class="btn btn-gradient">Ara</button>

                <!-- Küçük ikon butonları -->
                <a asp-controller="Favorites" asp-action="Index" class="circle-btn" title="Favoriler">
                    <i class="bi bi-heart"></i>
                </a>
                <a asp-controller="Profile" asp-action="Me" class="circle-btn" title="Profil">
                    <i class="bi bi-person"></i>
                </a>
                <a asp-controller="Bookmarks" asp-action="Index" class="circle-btn" title="Kaydedilenler">
                    <i class="bi bi-bookmark"></i>
                </a>

                <!-- Giriş / Çıkış -->
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline ms-1">
                        <button class="btn btn-outline-secondary">Çıkış Yap</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary ms-1">Giriş</a>
                }
            </div>
        </div>
    </header>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top py-3 mt-5">
        <div class="container text-center text-muted small">
            © @DateTime.Now.Year — MyApp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

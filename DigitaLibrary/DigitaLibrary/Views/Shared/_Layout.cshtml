    <header class="main-navbar">
        <nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm py-1">
            <div class="container-fluid">

                <!-- LOGO -->
                <a asp-controller="Home" asp-action="Index"
                   class="navbar-brand fw-bold me-2 text-decoration-none" style="font-size:18px;">
                    <span style="color:#2563eb;">DIGI</span><span style="color:#8b5cf6;">Library</span> 📝
                </a>

                <!-- Arama -->
                <form id="searchForm" asp-controller="Home" asp-action="Index" method="get"
                      class="d-flex align-items-center flex-grow-1 me-2 my-0">
                    <input name="q" value='@Context.Request.Query["q"]'
                           class="form-control" placeholder="Ara: başlık, etiket, yazar..." />
                </form>
                <ul class="navbar-nav mb-0">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link d-flex align-items-center">
                            <i class="bi bi-house me-1"></i> Ana Sayfa
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#"
                           id="navbarCategories" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-folder me-1"></i> Kategoriler
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarCategories">
                            @foreach (var cat in (IEnumerable<DigitaLibrary.Models.Category>)ViewBag.Categories ?? new List<DigitaLibrary.Models.Category>())
                            {
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Home"
                                       asp-action="Index"
                                       asp-route-categoryId="@cat.Id">
                                        @cat.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                </ul>
                <!-- İkonlar + Yazılar -->
                <ul class="navbar-nav flex-row align-items-center gap-3 me-3">
                    <li class="nav-item d-flex align-items-center">
                        <a asp-controller="Favorites" asp-action="Index" class="nav-link d-flex align-items-center p-0">
                            <i class="bi bi-heart me-1"></i> Favoriler
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a asp-controller="Bookmarks" asp-action="Index" class="nav-link d-flex align-items-center p-0">
                            <i class="bi bi-bookmark me-1"></i> Kaydedilenler
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a asp-controller="Profile" asp-action="Me" class="nav-link d-flex align-items-center p-0">
                            <i class="bi bi-person me-1"></i> Profil
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline m-0">
                                <button class="btn btn-outline-secondary btn-sm d-flex align-items-center">
                                    <i class="bi bi-box-arrow-right me-1"></i> Çıkış
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login"
                               class="btn btn-outline-primary btn-sm d-flex align-items-center">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Giriş
                            </a>
                        }
                    </li>
                </ul>

                <!-- Sağ Menü -->
                
            </div>
        </nav>
    </header>


    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top py-3 mt-5">
        <div class="container text-center text-muted small">
            © @DateTime.Now.Year — MyApp
        </div>
    </footer>

